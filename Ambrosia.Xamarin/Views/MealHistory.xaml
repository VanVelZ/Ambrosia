<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Ambrosia.Xamarin.Views.MealHistory">
    <ContentPage.Content>
        <StackLayout x:Name="stkFrame">
        <Frame Padding="10" Margin="10" VerticalOptions="CenterAndExpand">
            
        <StackLayout>
            <Frame Margin="10" BackgroundColor="SpringGreen">
            <ListView x:Name="lstMeals" ItemSelected="lstMeals_ItemSelected" HeightRequest="200"/>
            </Frame>
            <Frame Margin="10" BackgroundColor="OrangeRed">
                <ListView x:Name="lstFoodItems" HeightRequest="200" ItemSelected="lstFoodItems_ItemSelected"/>
            </Frame>
            <Frame Margin="10">
                <ScrollView>
                <StackLayout x:Name="stkNutrients">
                
                </StackLayout>
                    </ScrollView>
            </Frame>
        </StackLayout>
                
         </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
